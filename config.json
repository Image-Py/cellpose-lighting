{
    "name": "Cellpose Net",
    "n_gpu": 1,

    "arch": {
        "type": "CellPosenet",
        "args": {
            "nbase": [2, 32, 64, 128, 256],
            "nout": 3,
            "sz": 3,
            "residual_on": true,
            "style_on": true,
            "concatenation": false
        }
    },
    "data_loader": {
        "type": "CellDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "loss_fn",
    "metrics": [
        "iou_custom"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
